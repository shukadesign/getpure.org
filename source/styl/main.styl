  &_inside
    position absolute
    top 0
    right 0
    left 0
    bottom 0
    max-width 1480px
    margin auto

  &_image
    height 100%
    overflow hidden
    background-image url('/assets/img/anonim.gif')
    background-repeat no-repeat
    background-size 73%
    background-position center 3%
    +between(414px, 736px)
      background-size 75% auto
      background-position center 10%
    +between( 375px, 667px )

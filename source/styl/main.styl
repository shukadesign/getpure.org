          padding 0 rems(36)
      &_link
        color $grey
        display inline-block
        margin-bottom rems(6)
        font-size rems(18)
        letter-spacing .12em
        transition color 220ms
        &:last-of-type
          margin-bottom 0
        +hover()
          color $zero
        .i-apple
          font-size rems(38)
          margin-left rems(4)

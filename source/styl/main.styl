    +desktop()
      margin 0 0 rems(24)
      font-size rems(28)

    .i-shell-2
      font-size rems(46)
      top rems(3)
      margin 0 rems(5)
      margin-bottom rems(-46)

  &_p
    margin 0
    font-size rems(13)
    letter-spacing .35ex
    color $grey
    line-height 1.7
    +desktop()
      font-size rems(18)


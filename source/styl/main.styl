@import 'core/core'
@import 'jeet'

// edit( red )

body
  background-color $white
  -webkit-tap-highlight-color transparent
  transition opacity 90ms linear, margin-top 220ms
  opacity 0
  +mobile()
    &.banner-v3-is-show
      position fixed
      overflow hidden
    &.is-sbanner-hide
      position static
      overflow auto
    +landscape()
      position fixed
      top 0
      right 0
      bottom 0
      left 0
      overflow hidden
  &.load
    opacity 1
  +desktop()
    position relative
    min-width 768px

a
  cursor url('/assets/img/cursor.png'), pointer !important
  cursor -webkit-image-set( url('/assets/img/cursor.png') 1x, url('/assets/img/cursor_hi.png') 2x ), pointer !important

b
  font-weight normal

/* ==========================================================================
   Utility classes
   ========================================================================== */
.black
  color $zero

.grey
  color $grey

.white
  color $white

.bold
  Figgins()

.normal
.sans
  Figgins()

.thin
  FigginsThin()

.serif
  William()

.underline
  border-bottom 2px solid

.s-show
.touch
  display block
  +desktop()
    display none


.desktop
  display none
  +desktop()
    display block

.s-hide
  display none
  +desktop()
    display inline-block

.relative
  position relative

.block
  display block

/* Downer
   ========================================================================== */
.downer_wrap
  display none
  .transition  &
    display block
    position fixed
    right 0
    bottom 0
    left 0
    width 100%
    max-width 1480px
    margin auto
    z-index 999
    transition bottom 220ms
    &.is-absolute
      position absolute
      bottom 0
    +between( 768px, 1024px )
      display none
    +mobile()
      display none

.downer
  display block
  position absolute
  z-index 999
  bottom rems( 24 )
  right rems(56)
  width 46px
  height 46px
  color $zero
  text-align center
  transition color 240ms
  .is-light &
     color $white
  &_arr
    display inline-block
    position absolute
    left 19px
    bottom -3px
    width 8px
    height 5px
    background-image url('../../assets/img/downer-arr.png')
    background-size 100% 100%
    transition transform 400ms, bottom 400ms 400ms
    .is-up &
      transform rotate(-180deg)
      bottom 44px
    .is-light &
      background-image url('../../assets/img/downer-arr-light.png')
  &_line
    display inline-block
    width 2px
    height 46px
    background-image url('../../assets/img/downer-line.png')
    background-size cover
    .is-light &
      background-image url('../../assets/img/downer-line-light.png')

.fixline
  +mobile()
    display none
  +desktop()
    position fixed
    right 0
    left 0
    z-index 99
    transform translateY( -51% )
    transition transform 320ms
    &.is-open
      transform translateY( 0 )
    &.is-hide
      transform translateY( -100% )

// B-U-R-G-E-R
.burger
  +desktop()
    height 100%
    line-height rems(80)
    background-color $zero
    .club &
      background-color #1a1a1a
      border-bottom 1px solid $grey
  &-body
    center( 1480px, rems(72) )
    height 100%
    text-align left
    white-space nowrap
    +between( 768px, 1024px )
      +portrait()
        center( 1024px, rems(27) )
  &-link
    color $grey
    padding 1em 0 // << Fitts
    margin-left rems(60)
    Figgins()
    letter-spacing .25em
    transition color 220ms
    font-size rems(9)
    &:first-child
      margin-left rems( 72 )
    +hover()
      color white
    &[data-link="current"]
      color white
      +hover()
        color $white

/* Navigation
   ========================================================================== */
.nav
  display none
  +desktop()
    display block
    cf()
    z-index 999
    height rems( 80 )
    line-height rems( 80 )
    background-color rgba(white, .99)

  &_inside
    padding 0 rems(72)
    margin auto
    max-width 1480px
    +between( 768px, 1024px )
      +portrait()
        padding 0 rems(27)

  &_logo
    display block
    float left
    line-height rems(80)
    margin-top rems(4)
    font-size rems(33)

  &_list
    position relative
    text-align left
    white-space nowrap
    margin-left rems(72)
    height rems(80)

  &_link
    padding 1em 0 // << Fitts
    margin-left rems(60)
    Figgins()
    letter-spacing .25em
    transition color 220ms
    color $grey
    font-size rems(9)
    &:first-child
      margin-left 0
    +hover()
      color $zero

  .close
    position absolute
    right 0
    top 50%
    margin-top -17px
    width 30px
    height 30px
    cursor pointer
    +hover()
      .close-line
        background-color $zero
        &.light
          background-color #fff
    &-body
      position relative
      width 30px
      height 30px
      transform rotate(0)
      transition transform 400ms
    &-item
      position absolute
      top 0
      display block
      width 30px
      height 30px
      transition transform 400ms, opacity 220ms
    &-line
      position absolute
      display block
      width 30px
      height 2px
      background-color $grey
      top 50%
      margin-top -1px
      transition transform 400ms, top 400ms, background-color 220ms, opacity 120ms
      &.top
        transform translateY(-9px)
      &.bottom
        transform translateY( 9px )
      &.center
        opacity 1

    &.is-open
      .close-body
        transform rotate( 90deg )
      .close-item
        &.top
          transform rotate( -45deg )
        &.bottom
          transform rotate( 45deg )
        &.center
          opacity 0
      .close-line
        &.top
          transform translate( 0 )
        &.bottom
          transform translate( 0 )

[data-os="universal"]
  display block
  +between( 768px, 1024px )
    display none
  +desktop()
    display none
.is-sbanner-hide &
  display none

.sbanner
  position fixed
  top 0
  right 0
  left 0
  z-index 999
  border-bottom 1px solid alpha( $grey, 50% )
  height rems(72)
  background-color #f2f2f2
  transform translateY(0)
  transition transform 220ms
  [data-os="android"]&
    background-color white
    border-bottom 1px solid $grey
  [data-os="universal"]&
    background-color #f9d9e4
  [data-os="universal-big"]&
    height rems(370)
    top 50%
    margin-top rems(-185)
    background-color transparent
    border-bottom none
    transition transform 300ms linear
    .is-sbanner-hide &
      display block
      transform translate3d(150%, 20%, 0) rotate(30deg)
  &-body
    cf()
    padding 0 rems( 18 )
    [data-os="universal-big"] &
      position absolute
      top rems(12)
      right rems(22)
      bottom rems(12)
      left rems(22)
      background-color #f9d9e4
  &-title
    [data-os="universal-big"] &
      text-align center
      margin-top rems(36)
      margin-bottom rems(48)
      &-text
        font-size rems(24)
        color $grey
        letter-spacing .15em
  &-close
    align( vertical )
    left 0
    line-height 0
    height rems(18)
    width rems(18)
    [data-os="universal-big"] &
      transform none
      top rems(3)
      right rems(12)
      left auto
    &-body
      position relative
      top rems(4)
      left rems(5)
      width rems(11)
      height rems(11)
      [data-os="universal-big"] &
        top rems(6)
        left rems(7)
        width rems(14)
        height rems(14)
    &-item
      display block
      position absolute
      top 0
      left 0
      width rems(11)
      height rems(11)
      [data-os="universal-big"] &
        width rems(14)
        height rems(14)
      &.top
        transform rotate( -45deg )
      &.bottom
        transform rotate( 45deg )
    &-line
      position relative
      top rems(5)
      display block
      width rems(11)
      height 1px
      background-color $grey
      [data-os="android"] &
        background-color #696969
        height 2px
        top rems(4.5)
        border-radius 1px
      [data-os="universal-big"] &
        background-color $zero
        top rems(6.5)
        width rems(14)
  &-logo
    align( vertical )
    .icon
      top rems(9)
      font-size rems(72)
      left rems(2)
      [data-os="android"] &
        left rems(2)
  &-caption
    position relative
    height rems(72)
    margin-left rems(63)
    text-transform none
    font-size rems(10)
    [data-os="android"] &
      margin-left rems(66)
      font-size rems(11)
      color #444444
    [data-os="universal"] &,
    [data-os="universal-big"] &
      margin-left 0
      font-size rems(10)
      Figgins()
    [data-os="universal-big"] &
      text-transform uppercase
      letter-spacing .15em
      text-align center
    .upc
      text-transform uppercase
      letter-spacing .08em
      [data-os="universal"] &
        letter-spacing .18em
      [data-os="universal-big"] &
        letter-spacing .18em
    .big
      font-size rems(12)
      line-height 1
      [data-os="android"] &
        font-size rems(18)
      [data-os="universal"] &
        font-size rems(18)
    .star
      height rems(9)
      margin-bottom rems(3)
    &-body
      align( vertical )
      margin-top rems(3)
      width 100%
      [data-os="android"] &
        position static
        margin-top rems(16)
        transform none
      [data-os="universal"] &
        margin-top rems(3)
        line-height 1.9
  &-link
    align( vertical )
    display block
    right 0
    font-size rems(15)
    color #366bb3
    [data-os="android"] &
      border 1px solid $grey
      color #39add7
      margin-top rems(3)
      padding rems(12) rems(19)
      padding-bottom rems(9)
      border-radius 7px
      font-size rems(10)
    [data-os="universal"] &,
    [data-os="universal-big"] &
      font-size rems(10)
      background-color white
      padding rems(8) rems(29)
      border-radius 7px
      color $zero
      margin-top -3px
    [data-os="universal-big"] &
      transform none
      position static
      display inline-block
      margin-top rems(14)

.touch-menu
  margin-top rems(72)
  transition margin 220ms
  .is-sbanner-hide &
    margin-top 0
  .banner-v3-is-show &
    margin-top 0
  +desktop()
    display none
  &-bottom
    border-top 1px solid alpha( $grey, 50% )
    margin-top 0
  &-line
    cf()
    padding-top rems(12)
    padding-bottom rems(12)
    border-bottom 1px solid alpha( $grey, 50% )
    &-a
      padding-left rems(18)
      padding-top rems(10)
      padding-bottom rems(10)
  .icon
    font-size rems(34)
    top rems(5)
  &-link
    display block
    width 50%
    float left
    font-size rems(13)
    padding 0 rems(18)
    Figgins()
    letter-spacing .15em
    margin 0
    &.is-touch
      color $gold
  &-main-link
    .is-touch&
      color $gold
/* WRAP
   ========================================================================== */
